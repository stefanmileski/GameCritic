@model Proekt_IT.Models.Publisher
@using Proekt_IT.Models

@{
    ViewBag.Title = "Details";
}

<h2>Details for @Model.Name</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-lg-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
        <div class="col-lg-4">
            <img src=@Model.LogoUrl alt=@Model.Name class="width125" />
        </div>
        <div class="col-lg-4">
            <table>
                <thead>
                    <tr>
                        <th>List of Games</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Game game in Model.Games)
                    {
                        <tr>
                            <td>@Html.ActionLink(game.Name, "Details", "Games", new { id = game.GameId }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PublisherId }, new { @class = "btn btn-default" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>

<style>
    .width125 {
        width: 125px;
    }
</style>